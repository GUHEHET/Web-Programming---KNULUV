<script>
	function signup(email, pwd, pwd_check) {
		if (pwd == pwd_check) {
			firebase.auth().createUserWithEmailAndPassword(email, pwd).then(
					function(user) {
						alert("성공");
					}, function(error) {
						// Handle Errors here.
						var errorCode = error.code;
						var errorMessage = error.message;
						// [START_EXCLUDE]
						if (errorCode == 'auth/weak-password') {
							alert('The password is too weak.');
						} else {
							alert(errorMessage);
						}
						console.log(error);
						// [END_EXCLUDE]
					});
		} else {
			alert("비밀번호를 확인하세요.");
		}
	}
</script>
<body>
	<jsp:include page="firebase.jsp"></jsp:include>
	<section class="login-block signup">
		<div class="col-md-4 container">
			<div class="login-sec">
